<!--标题栏-->
<view class='aaaa' style='height:{{statusBarHeight}}px;background: linear-gradient(to left,#f9bb00,#fdd000);position:fixed;top:0;width:100%;z-index:2;'></view>
<view class='topBar' style='position:fixed;top:{{statusBarHeight}}px;width:100%;text-align:center;font-size:33rpx;color:#444;height:44px;line-height:44px;background: linear-gradient(to left,#f9bb00,#fdd000);z-index:2;'>
  <!-- <view class='return' style='position:absolute;left:20rpx;' bindtap='return'><i-icon style='position:relative;top:-1.5px' size="20" type="return" /> 返回</view> -->
  订单查询
</view>
<view class="container" id='container' style='margin-bottom:52px;padding-top:{{statusBarHeight+44}}px;'>
  <view class='topbind' style='width: 750rpx;height: 86rpx;font: 32rpx/86rpx "微软雅黑";background-color:#fff; color: #000;text-align: left;display:flex;border-bottom: 1px solid #eee;position:relative;'>
   <icon type="search" size="13" color="#666" /> <input class='box' style='flex-grow:2;background-color:#eee;' confirm-type="search" bindconfirm="doSearh" bindinput='proName' type='text' placeholder="请输入产品名称或订单号"></input>
    <!-- <button class='box' >搜索</button> -->
    <i-button style='margin-right:20rpx;' i-class="box boxbutton" bind:click="doSearh"  shape="circle" size="small">搜索</i-button>
    <!-- <view class='box' bindtap='toggleRight1' style='margin-right:20rpx;font-size:24rpx;'>筛选<i-icon size='20' type="other" /></view> -->
  </view>
  <view style='margin-bottom:20rpx;' class='tab' id='tab'>
    <i-tabs current="{{ current }}" color="#FABF00" bindchange="handleChange">
      <i-tab key="tab1" title="全部"></i-tab><i-tab key="tab2" title="未付定金"></i-tab>
      <i-tab key="tab3" title="待发货"></i-tab>
      <i-tab key="tab4" title="已发货"></i-tab>
    </i-tabs>
  </view>
  <view  class='animated {{orderLists.length==0&&hiddenload?"zoomIn":"zoomOut"}}' style='text-align: center;display:{{orderLists.length==0&&hiddenload?"block":"none"}}'>
   <view class="loading"></view></view>
  <wxs src="../../utils/tools.wxs" module="tools" />

  
  <block wx:for="{{orderLists}}" wx:key="index">
    <i-swipeout data-id='{{item.sn}}' data-code="{{item.companyCode}}" data-index="2" i-class="i-swipeout-demo-item" unclosable="{{true}}" toggle="{{toggle2}}" actions="{{actions}}" bindchange="change">
      
      <view slot="content" data-id='{{item.sn}}' data-code="{{item.companyCode}}" class='orderTitle' bindtap='change' bindtouchstart='handlerCloseButton'>
      <view style='display:flex;justify-content: space-between;padding:2rpx 28rpx;height:40rpx;line-height:40rpx;'>
        <view class="title" style='font-size:24rpx;width:500rpx;word-break:break-all;-webkit-line-clamp:1;-webkit-box-orient:vertical;overflow:hidden;text-overflow:ellipsis;'>{{item.name}}</view>
        <view class='btnOrderType'>{{item.category}}</view>
      </view>
        <view style='display:flex;justify-content: space-between;color:#9F9F9F;font-size:22rpx;border-top: 1px dotted #FFC64C;border-bottom: 1px solid #FFC64C;padding:10rpx 28rpx;'>
          <view class='left' style='width:515rpx;display:flex;align-content:space-around;flex-wrap:wrap;'>
              <view style='width:515rpx;'>订单号：{{item.sn}}</view>
              <view wx-if="{{item.expressNumber}}" style="margin-top:6rpx;"><i-row>
                  <i-col span="18" i-class="col-class">物流号：{{item.expressNumber}} </i-col>
                  <i-col span="6" i-class="col-class">{{item.expressCompany}}</i-col>
              </i-row></view>
              <view style="margin-top:6rpx;width:515rpx;">总金额：{{item.sum}} <text style='margin-left:20rpx;'>运费：{{item.expressSum}}</text></view>
          </view>
          <view class='right' style='display:flex;align-content:space-between;flex-wrap:wrap;justify-content: flex-end'>
              <view style='text-align:right;'>{{tools.bar(item.makeTime)[0]}}<view>{{tools.bar(item.makeTime)[1]}}</view></view>
              <view style='text-align:right;'>已付：{{item.receivedSum}}</view>
          </view>
        </view>
      
      </view>
    </i-swipeout>
  </block>
  <view  style='font-size:25rpx;text-align:center;margin-top:30%;display:{{totleNum ==0&&doOnce?"block":"none"}}'><image  style='width:200rpx;height:200rpx;' src='../../image/meiyoudingdan.png'></image><view>没有订单</view></view>
<view wx-if="{{orderLists.length!=0&&showLoade}}"><i-load-more /></view>
<view wx-if="{{productNum==totleNum}}" style='opacity:{{showBottom?"1":"0"}}' id='theBottom'><i-load-more tip="到底了" loading="{{ false }}" /></view>
</view>
<view>
  <view class='index'>{{productNum}} / {{totleNum}}</view>
  <view class='toTop' bindtap='totop'>
    
    <view class='iconfont iconstick_icon'></view>
  </view>
</view>
<!-- 筛选 -->
  <i-drawer mode="right" visible="{{showRight1}}" bind:close="toggleRight1">
      <view class="demo-container">
        <view style='height:{{statusBarHeight}}px;padding-top:44px;'></view>
          这里存放选择的标签
      </view>
  </i-drawer>