      <view wx:if="{{loading}}">
        <van-submit-bar
          loading
          price="{{ cartTotal }}"
          button-text="下单"
          bind:submit="onClickButton"
          custom-class="van-submit-bar"
          safe-area-inset-bottom="{{ false }}"
        />
      </view>
      <view wx:else>
        <van-submit-bar
          price="{{ cartTotal }}"
          button-text="下单"
