/* pages/authorize/authorize.wxss */
.container{
  width: 100vw;
  height: 100vh;
  /* min-height: 1314rpx; */
  background-image: url(http://www.yqcoffee.cn/image/logonAgree_bg.png);
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -300rpx;
}

checkbox{
  zoom: 0.5;
  position: relative;
  bottom: 18rpx;
}
.logo{
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 100rpx;
}
.logo image{
  width: 100%;
  height: 100%;
  border-radius: 100rpx;
}
.login-btn{
  display:inline-block;
  width: 200rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: white;
  background: black;
  font-weight: bold;
}
.login-btn::after{
  border: 0;
}