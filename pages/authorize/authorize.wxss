.container{
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -300rpx;
}
.logo{
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 100rpx;
}
.logo image{
  width: 100%;
  height: 100%;
  border-radius: 100rpx;
}
.login-btn{
  width: 200rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: white;
  background: black;
  font-weight: bold;
}
.login-btn::after{
  border: 0;
}